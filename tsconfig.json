// Inspired by react-typescript-chrome-extension-boilerplate
{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "strictPropertyInitialization": false,
        "noEmit": false,
        "forceConsistentCasingInFileNames": true,
        // "allowImportingTsExtensions": true,
        "target": "ES2015",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "allowJs": true
        // "declaration": true,
    },
    "include": ["./src/**/*", "index.ts"],
    "exclude": ["node_modules"]
}
